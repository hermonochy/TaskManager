#!/usr/bin/env lua
local filename = ".tasks.txt"
local tasks = {}

local function loadTasks()
    local file = io.open(filename, "r")
    if file then
        for line in file:lines() do
            table.insert(tasks, line)
        end
        file:close()
    end
end

local function saveTasks()
    local file = io.open(filename, "w")
    for _, task in ipairs(tasks) do
        file:write(task .. "\n")
    end
    file:close()
end

local function addTask(task)
    table.insert(tasks, task)
    saveTasks()
    print("Task added: " .. task)
end

local function viewTasks()
    if #tasks == 0 then
        print("No tasks available.")
    else
        print("Tasks:\n")
        for i, task in ipairs(tasks) do
            print(i .. ". " .. task,"\n")
        end
    end
end

local function removeTask(index)
    if index >= 1 and index <= #tasks then
        print("Removing task: " .. tasks[index])
        table.remove(tasks, index)
        saveTasks()
    else
        print("Invalid task number.")
    end
end

local function main()
    loadTasks()
    while true do
        print("\nTask Manager")
        print("1. Add Task")
        print("2. View Tasks")
        print("3. Remove Task")
        print("4. Exit")
        io.write("Choose an option (1-4): ")
        local choice = tonumber(io.read())

        if choice == 1 then
            io.write("Enter task: ")
            local task = io.read()
            addTask(task)
        elseif choice == 2 then
            viewTasks()
        elseif choice == 3 then
            io.write("Enter task number to remove: ")
            local index = tonumber(io.read())
            removeTask(index)
        elseif choice == 4 then
            break
        else
            print("Invalid option. Please try again.")
        end
    end
end

main()
